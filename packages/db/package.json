{
  "name": "@repo/db",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Nelson Lai <me@nelsonlai.dev> (https://github.com/nelsonlaidev/)",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "clean": "rm -rf .turbo",
    "db:check": "bun with-env drizzle-kit check",
    "db:generate": "bun with-env drizzle-kit generate",
    "db:migrate": "bun with-env drizzle-kit migrate",
    "db:push": "bun with-env drizzle-kit push",
    "db:reset": "bun with-env run ./src/reset.ts",
    "db:seed": "bun with-env run ./src/seed.ts",
    "db:studio": "bun with-env drizzle-kit studio",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit",
    "with-env": "dotenvx run -f ../../.env.local --ignore=MISSING_ENV_FILE --"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "dependencies": {
    "@repo/env": "workspace:*",
    "drizzle-orm": "^0.44.5",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@nelsonlaidev/eslint-config": "^2.1.1",
    "@nelsonlaidev/typescript-config": "^0.0.3",
    "@types/node": "^24.3.3",
    "consola": "^3.4.2",
    "drizzle-kit": "^0.31.4",
    "execa": "^9.6.0"
  },
  "peerDependencies": {
    "postgres": "^3"
  }
}
